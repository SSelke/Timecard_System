<%- include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mb-5" style="text-align: center;">Edit
                    <%= user.first_name%>
                        <%= user.last_name%>
                </h1>
                <form class="mt-5" action="/users/<%= user._id%>?_method=PUT" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                            <label for="username">User Name</label>
                            <input class="form-control" type="text" name="username" autocomplete="off" placeholder="<%= user.username%>" value="<%= user.username%>" required />
                        </div>
                        <div class="form-group col-md-4">
                            <label for="first_name">First Name</label>
                            <input class="form-control" type="text" name="first_name" value="<%= user.first_name%>" required />
                        </div>
                        <div class="form-group col-md-2">
                            <label for="middle_initial">Middle Initial</label>
                            <select id="middle_initial" name="middle_initial" class="form-control" value="<%= user.middle_initial%>">
                                <option selected value="<%= user.middle_initial%>"></option>
                                <option value="A">A</option>
                                <option value="B">B</option>
                                <option value="C">C</option>
                                <option value="D">D</option>
                                <option value="E">E</option>
                                <option value="F">F</option>
                                <option value="G">G</option>
                                <option value="H">H</option>
                                <option value="I">I</option>
                                <option value="J">J</option>
                                <option value="K">K</option>
                                <option value="L">L</option>
                                <option value="M">M</option>
                                <option value="N">N</option>
                                <option value="O">O</option>
                                <option value="P">P</option>
                                <option value="Q">Q</option>
                                <option value="R">R</option>
                                <option value="S">S</option>
                                <option value="T">T</option>
                                <option value="U">U</option>
                                <option value="V">V</option>
                                <option value="W">W</option>
                                <option value="X">X</option>
                                <option value="Y">Y</option>
                                <option value="Z">Z</option>
                            </select>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="last_name">Last Name</label>
                            <input class="form-control" type="text" name="last_name" autocomplete="off" value="<%= user.last_name%>" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <label for="number">Phone Number</label>
                            <input class="form-control" type="number" name="phone" autocomplete="off" value="<%= user.phone%>" required />
                        </div>
                        <div class="form-group col-md-4">
                            <label for="privileges">Privileges</label>
                            <select id="privileges" name="isManager" class="form-control">
                                <option selected value="false">Employee</option>
                                <option value="true">Manager</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="email">Email</label>
                            <input class="form-control" type="email" name="email" autocomplete="off" value="<%= user.email%>" required />
                        </div>
                    </div>
                    <label for="Address">Address</label>
                    <input class="form-control" type="text" name="address" autocomplete="off" value="<%= user.address%>" placeholder="
                    <%= user.address%>" required />
                    <button class="btn btn-md btn-primary btn-block mt-5">Update Info</button>
                </form>
            </div>
        </div>
    </div>
    <%- include ../partials/footer %>
    