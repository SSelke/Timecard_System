<% include ../partials/header%>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Edit
                <%= user.first_name%> <%= user.last_name%>
            </h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/users/<%= user._id%>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= user.first_name%>" name="user[first_name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= user.middle_initial%>" name="user[middle_initial]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= user.last_name%>" name="user[last_name]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= user.username%>" name="user[username]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= user.phone%>" name="user[phone]">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" value="<%= user.password%>" name="user[password]">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/users/employees">Go Back!</a>
            </div>
        </div>
    </div>
    <% include ../partials/footer%>