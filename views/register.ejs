<% include ./partials/header %>
<h1>Register form</h1>
<form action="/register" method="post">
    <label for="username">User Name</label>
    <input class="form-control" type="text" name="username" autocomplete="off" required />
    <label for="password">Password</label>
    <input class="form-control" type="password" name="password" autocomplete="off" required />
    <label for="first_name">First Name</label>
    <input class="form-control" type="text" name="first_name" autocomplete="off" required />
    <label for="middle_initial">Middle Initial</label>
    <input class="form-control" type="text" name="middle_initial" autocomplete="off" required />
    <label for="last_name">Last Name</label>
    <input class="form-control" type="text" name="last_name" autocomplete="off" required />
    <label for="number">Phone Number</label>
    <input class="form-control" type="number" name="phone" autocomplete="off" required />
    <label for="Address">Phone Number</label>
    <input class="form-control" type="text" name="address" autocomplete="off" required />
    <label for="isManager">Manager Privilages</label>
    <input class="form-control" type="checkbox" name="isManager" value="true" autocomplete="off" required />
    <button class="btn btn-md btn-primary btn-block">Register</button>
</form>

